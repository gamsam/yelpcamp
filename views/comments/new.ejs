<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center; margin-top: 40px;">Add New Comment to <%= campground.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">

            <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Add Your Comment">
                </div>
                <button type="submit" class="btn btn-primary btn-block"> Submit! </button>
            </form>

            <a href="/campgrounds"> Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>